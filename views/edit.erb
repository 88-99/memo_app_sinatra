<form method="post" action="/memos/edit">
  <div>
    タイトル
  </div>
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="title" value="<%= @memo["title"] %>" class="box_title" placeholder="タイトルを入力してください">

  <div>
    本文
  </div>
  <textarea name="content" class="box_content" placeholder="内容を入力してください"><%= @memo["content"] %></textarea>
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="id" value="<%= @memo["id"] %>">
  <div class="button">
    <input type="submit" value="保存">
  </div>
</form>
